<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.ModifyEmployeeController">
  <children>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
         <children>
            <Label layoutX="119.0" layoutY="38.0" text="Modifiy employee">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <Label layoutX="62.0" layoutY="379.0" text="Name">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Label layoutX="64.0" layoutY="425.0" text="Initials">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Label layoutX="39.0" layoutY="101.0" prefHeight="17.0" prefWidth="332.0" text="Please select from the list the employee:">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Button fx:id="saveButton" layoutX="197.0" layoutY="533.0" mnemonicParsing="false" onAction="#save" text="Save" />
            <TextField fx:id="nameField" layoutX="196.0" layoutY="377.0" />
            <Button fx:id="cancelButton" layoutX="278.0" layoutY="533.0" mnemonicParsing="false" onAction="#cancel" text="Cancel" />
            <TextField fx:id="initialField" layoutX="197.0" layoutY="423.0" />
            <ListView fx:id="employeeListView" layoutX="39.0" layoutY="133.0" onMouseClicked="#chooseEmployee" onMouseEntered="#updateList" prefHeight="226.0" prefWidth="304.0" />
         </children>
    </AnchorPane>
  </children>
</VBox>
